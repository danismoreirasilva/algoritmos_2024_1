algoritmo "ex02"
//Contar até que o limite que o usuário determinar
var
   contador, valor: inteiro
inicio
   contador <- 1
   escreva("Quer contar até quanto: ")
   leia(valor)

   escrevaL("Inicinado a contagem: ")
   enquanto (contador <= valor)faca
      escreval(contador)
      contador <- contador + 1
   fimEnquanto

   escreval("Fim do loop")

fimalgoritmo